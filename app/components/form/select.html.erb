<div class="Polaris-FormLayout__Item">
  <div class="<% if inline || label_hidden -%>Polaris-Labelled--hidden<% end -%>">
    <div class="Polaris-Labelled__LabelWrapper">
      <div class="Polaris-Label"><%= form.label field ,class: "Polaris-Label__Text" %></div>
    </div>
    <div class="Polaris-Select">
      <%= form.select field, choices , {} ,class: "Polaris-Select__Input #{class_extra}" %>
      <div class="Polaris-Select__Content" aria-hidden="true"><% if inline -%>
        <span class="Polaris-Select__InlineLabel"><%= field.to_s.humanize %></span>
      <% end -%><span class="Polaris-Select__SelectedOption"></span><span class="Polaris-Select__Icon"><span class="Polaris-Icon"><svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
        <path d="M13 8l-3-3-3 3h6zm-.1 4L10 14.9 7.1 12h5.8z" fill-rule="evenodd"></path></svg></span></span>
      </div>
      <div class="Polaris-Select__Backdrop"></div>
    </div>
  </div>
</div>
